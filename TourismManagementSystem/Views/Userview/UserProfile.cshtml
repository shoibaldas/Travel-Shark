@model TourismManagementSystem.Models.IdentityModels.ApplicationUser
@{
    ViewData["Title"] = "Userprofile1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container emp-profile">
    <form asp-action="UserProfile">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="~/Image/avater_user.jpg" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        @*Change Photo*@
                        <input type="file" name="file" />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        User Profile
                    </h5>
                    <br />
                    <h6 class="profile-head">
                        @Html.DisplayFor(model => model.FullName)
                    </h6>
                    <br />
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Account Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Booking History</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <a asp-area="" asp-controller="Userview" asp-action="EditUserProfile">
                    <input type="button" class="btn btn-primary" name="btnAddMore" value="Update Profile" />
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>First Name</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.FirstName)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Last Name</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.LastName)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Email)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phone Number</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.PhoneNumber)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Gender</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Gender)</p>
                            </div>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="container">
                            <div class="table-responsive">
                                <div class="table-wrapper">
                                    <table class="table table-striped table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Destination
                                                </th>
                                                <th>
                                                    Check-In Date
                                                </th>
                                                <th>
                                                    Check-out Date
                                                </th>
                                                <th>
                                                    Booking Date
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Action
                                                </th>w
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.UserBookings)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Destination
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:dd-MM-yyyy}", item.CheckIn)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:dd-MM-yyyy}", item.CheckOut)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:dd-MM-yyyy}", item.Date)
                                                    </td>
                                                    <td>
                                                        @item.Status
                                                    </td>
                                                    <td>
                                                        <a class="delete" title="Cancel Booking" data-toggle="tooltip" asp-action="Reject" asp-route-id="@item.Id"><i class="material-icons">&#xE872;</i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

