@model TourismManagementSystem.Models.BookModel
@{
    ViewData["Title"] = "BookingDetails";
    Layout = "~/Views/Shared/_LayoutAddition.cshtml";
}

<div class="container emp-profile">
    <form asp-action="BookingDetails">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="~/Image/avater_user.jpg" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        @*Change Photo*@
                        <input type="file" name="file" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5 class="profile-head">
                        @Html.DisplayFor(model => model.ApplicationUser.FullName)
                    </h5>
                    <h6>
                        Email: @Html.DisplayFor(model => model.ApplicationUser.Email)
                    </h6>
                    <p class="proile-rating">Mobile Number: <span>@Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Account Information</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <a asp-area="" asp-controller="Admin" asp-action="GoBack">
                    <input type="button" class="btn btn-primary" name="btnAddMore" value="Back to Book" />
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Destination</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Destination)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>From</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.From)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Check-In Date</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.CheckIn)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Check-Out Date</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.CheckOut)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Number of Room</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Room)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Adult</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Adults)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Child</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Child)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Hotel Package</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayNameFor(model => model.HotelPackage)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Vehicle Package</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.VechiclePackage)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Booking Date</label>
                            </div>
                            <div class="col-md-6">
                                <p> @Html.DisplayFor(model => model.Date)</p>
                            </div>
                        </div>
                        </div>
                    </div>
            </div>
        </div>
    </form>
</div>


