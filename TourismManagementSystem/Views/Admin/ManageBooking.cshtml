@model IEnumerable<TourismManagementSystem.Models.BookModel>
@{
    ViewData["Title"] = "ManageBooking";
    Layout = "~/Views/Shared/_LayoutAddition.cshtml";
}

<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Bookings</h2></div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>
                            <input type="text" class="form-control" placeholder="Search&hellip;">
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Destination
                        </th>
                        <th>
                            Check-In Date
                        </th>
                        <th>
                            Check-out Date
                        </th>
                        <th>
                            Booking Date
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Destination)
                        </td>
                        <td>
                            @String.Format("{0:dd-MM-yyyy}", item.CheckIn)
                        </td>
                        <td>
                            @String.Format("{0:dd-MM-yyyy}", item.CheckOut)
                        </td>
                        <td>
                            @String.Format("{0:dd-MM-yyyy}", item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a class="view"  title="View" data-toggle="tooltip" asp-action="BookingDetails" asp-route-id="@item.Id"><i class="material-icons">&#xE417;</i></a>
                            <a class="approve" title="Approve" data-toggle="tooltip" asp-action="Approve" asp-route-id="@item.Id"><i class="material-icons">&#xE876;</i></a>
                            <a class="delete" title="Cancel Booking" data-toggle="tooltip" asp-action="Reject" asp-route-id="@item.Id"><i class="material-icons">&#xE5c9;</i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
